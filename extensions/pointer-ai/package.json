{
	"name": "pointer-ai",
	"displayName": "Pointer AI",
	"description": "Pointer first-party AI surface integration.",
	"version": "0.0.1",
	"publisher": "pointer",
	"engines": {
		"vscode": "^1.110.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:pointer.home",
		"onCommand:pointer.openChat",
		"onCommand:pointer.toggleTab",
		"onCommand:pointer.selectModel",
		"onCommand:pointer.openSettings"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pointer.openChat",
				"title": "Pointer: Open Chat",
				"category": "Pointer"
			},
			{
				"command": "pointer.toggleTab",
				"title": "Pointer: Toggle Tab",
				"category": "Pointer"
			},
			{
				"command": "pointer.selectModel",
				"title": "Pointer: Select Model",
				"category": "Pointer"
			},
			{
				"command": "pointer.openSettings",
				"title": "Pointer: Open Settings",
				"category": "Pointer"
			}
		],
		"configuration": [
			{
				"title": "Pointer: Providers",
				"properties": {
					"pointer.providers.primary": {
						"type": "string",
						"default": "auto",
						"description": "Primary provider identifier used when a surface does not override provider selection."
					}
				}
			},
			{
				"title": "Pointer: Models",
				"properties": {
					"pointer.models.default": {
						"type": "string",
						"default": "auto",
						"description": "Default model identifier used when a surface does not override model selection."
					}
				}
			},
			{
				"title": "Pointer: Context",
				"properties": {
					"pointer.context.maxFiles": {
						"type": "number",
						"default": 8,
						"minimum": 1,
						"description": "Maximum number of files to include in automatically assembled context."
					}
				}
			},
			{
				"title": "Pointer: Tools and Safety",
				"properties": {
					"pointer.tools.terminalPolicy": {
						"type": "string",
						"default": "confirm",
						"enum": ["disabled", "confirm", "allow"],
						"description": "Default terminal tool execution policy."
					}
				}
			},
			{
				"title": "Pointer: Prompts and Rules",
				"properties": {
					"pointer.prompts.rulesProfile": {
						"type": "string",
						"default": "workspace",
						"description": "Default rules profile applied when composing prompts."
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "pointer",
					"title": "Pointer",
					"icon": "media/pointer-activity.svg"
				}
			]
		},
		"views": {
			"pointer": [
				{
					"id": "pointer.home",
					"name": "Pointer"
				}
			]
		}
	}
}
