{
	"name": "pointer-ai",
	"displayName": "Pointer AI",
	"description": "Pointer first-party AI surface integration.",
	"version": "0.0.1",
	"publisher": "pointer",
	"engines": {
		"vscode": "^1.110.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:pointer.home",
		"onCommand:pointer.openChat",
		"onCommand:pointer.toggleTab",
		"onCommand:pointer.selectModel",
		"onCommand:pointer.openSettings"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pointer.openChat",
				"title": "Pointer: Open Chat",
				"category": "Pointer"
			},
			{
				"command": "pointer.toggleTab",
				"title": "Pointer: Toggle Tab",
				"category": "Pointer"
			},
			{
				"command": "pointer.selectModel",
				"title": "Pointer: Select Model",
				"category": "Pointer"
			},
			{
				"command": "pointer.openSettings",
				"title": "Pointer: Open Settings",
				"category": "Pointer"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "pointer",
					"title": "Pointer",
					"icon": "media/pointer-activity.svg"
				}
			]
		},
		"views": {
			"pointer": [
				{
					"id": "pointer.home",
					"name": "Pointer"
				}
			]
		}
	}
}
